extends layout

include bit/sidebar

block content
  div.span7
    h3 #{tut.title}
    div -- by #{tut.createdBy}
    hr
    p #{tut.desc}
    p Read the tutorial:
    a.span6.well.externtut(href=#{tut.url}) #{tut.url}
    br
    hr
  div.span3.well.well-small
    h5 Dependencies:
    +topic_tags(tut.requires)
    h5 Skill you will learn:
    +topic_tags(tut.acquires)
    h5 Statistics
    +statistics(tut.stat)
    h5 Share
    +sharebtn
