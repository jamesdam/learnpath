extends layout

include bit/tut_card

block content
  h1 = title
  h3 Welcome to #{title}
  span.floatleft Find the best learning way from all over the web!
  div.floatright
    a.btn.btn-primary.padright(href="/tutorial/new") Add tutorial
    a.btn.btn-primary.padright(href="/learnpath/new") Add learning path
  div.clearfix
  hr
  h4 Popular Learning Paths:
  ul.thumbnails
    each path in paths
      li
        +path_image_block(path)
        hr
  h4 Popular Tutorials:
  ul.thumbnails
    each tut in new_tuts
      li
        +tut_image_block(tut)
        hr
